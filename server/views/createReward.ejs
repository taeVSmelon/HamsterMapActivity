<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Create Reward</title>

    <link href="../bs-5/css/bootstrap.min.css" rel="stylesheet">

    <style>
        ::placeholder {
            font-weight: 300 !important;
            color: #bbb !important;
            font-style: italic !important;
            opacity: 0.4 !important;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="mb-4">Create Reward</h1>

        <form id="item-form">
            <h4>Main</h4>
            <div class="alert alert-secondary">
                <label for="exp">Exp Drop</label>
                <input type="number" id="exp" name="exp" class="form-control" placeholder="100" required />
                <br>
                <label for="coin">Coin Drop</label>
                <input type="number" id="coin" name="coin" class="form-control" placeholder="100" required />
            </div>

            <h4>Random Drop</h4>
            <div class="alert alert-warning" id="results">
                <div class="p-0 m-0 result-item">
                    <div class="p-0 m-0 row">
                        <div class="col-5">
                            <label for="name">Item Result Name</label>
                            <input type="text" class="form-control name" disabled />
                        </div>
                        <div class="col-5">
                            <label for="item">Item Result Id</label>
                            <input type="number" class="form-control item" placeholder="1000000" required />
                        </div>
                        <div class="col-2">
                            <button class="btn btn-primary w-100 h-100 fs-3 search">Search</button>
                        </div>
                        <div class="col-5">
                            <label for="count">Item Result Count</label>
                            <input type="number" class="form-control count" min="1" placeholder="1" required />
                        </div>
                        <div class="col-5">
                            <label for="rate">Item Result Rate</label>
                            <input type="number" class="form-control rate" min="1" placeholder="1" required />
                        </div>
                        <div class="col-2">
                            <label for="percent">Percent</label>
                            <input type="text" class="form-control percent" disabled />
                        </div>
                    </div>
                    <button type="button" class="btn btn-danger mt-3 delete-result-btn">Delete</button>
                    <hr class="border border-warning border-2">
                </div>
            </div>

            <button type="button" class="btn btn-primary me-3 add-result-btn">Add Result Item</button>
            <button type="submit" class="btn btn-success">Create</button>
        </form>
    </div>

    <script>
        const form = document.getElementById("item-form");
        const resultItemParent = document.querySelector("#results");
        const addResultButton = document.querySelector(".add-result-btn");
        const resultItemModel = document.querySelector("#results .result-item").cloneNode(true);

        addResultButton.onclick = addResultItem;

        function addResultItem() {
            const newResultItem = resultItemModel.cloneNode(true);

            resultItemParent.appendChild(newResultItem);
            reloadResultItems();
        }

        function deleteResultItem(element) {
            const resultItems = document.querySelectorAll(".result-item");

            if (resultItems.length > 1) {
                element.remove();
                reloadResultItems();
            }
        }

        function updatePercents() {
            const resultItems = document.querySelectorAll(".result-item");
            let totalRate = 0;

            resultItems.forEach(item => {
                const rateInput = item.querySelector(".rate");
                const rate = parseFloat(rateInput?.value || 0);
                if (!isNaN(rate)) {
                    totalRate += rate;
                }
            });

            resultItems.forEach(item => {
                const rateInput = item.querySelector(".rate");
                const percentInput = item.querySelector(".percent");
                const rate = parseFloat(rateInput?.value || 0);

                if (!isNaN(rate) && totalRate > 0) {
                    const percent = ((rate / totalRate) * 100).toFixed(1);
                    percentInput.value = percent + "%";
                } else {
                    percentInput.value = "0%";
                }
            });
        }

        function attachSearchHandlers() {
            const resultItems = document.querySelectorAll(".result-item");

            resultItems.forEach(resultItem => {
                const searchButton = resultItem.querySelector(".search");
                if (searchButton) {
                    searchButton.type = "button";

                    searchButton.onclick = async () => {
                        const itemIdInput = resultItem.querySelector(".item");
                        const nameInput = resultItem.querySelector(".name");
                        const itemId = itemIdInput.value;

                        if (!itemId || isNaN(itemId)) {
                            nameInput.value = "(Invalid ID)";
                            return;
                        }

                        try {
                            const response = await fetch(`./item/${itemId}`);
                            if (response.ok) {
                                const itemData = await response.json();
                                nameInput.value = itemData.item.name;
                            } else {
                                nameInput.value = "(Unnamed Item)";
                            }
                        } catch (err) {
                            nameInput.value = "(Item not found)";
                        }
                    };
                }
            });
        }

        function reloadResultItems() {
            const resultItems = document.querySelectorAll(".result-item");

            resultItems.forEach(resultItem => {
                const deleteResultButton = resultItem.querySelector(".delete-result-btn");

                if (deleteResultButton) {
                    if (resultItems.length > 1) {
                        deleteResultButton.classList.remove("d-none");
                        deleteResultButton.onclick = () => deleteResultItem(resultItem);
                    } else {
                        deleteResultButton.classList.add("d-none");
                        deleteResultButton.onclick = null;
                    }
                }

                const oldRateInput = resultItem.querySelector(".rate");
                if (oldRateInput) {
                    const newRateInput = oldRateInput.cloneNode(true);
                    newRateInput.addEventListener("input", updatePercents);
                    oldRateInput.parentNode.replaceChild(newRateInput, oldRateInput);
                }
            });

            attachSearchHandlers();
            updatePercents();
        }

        reloadResultItems();

        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            const formData = new FormData(form);
            const exp = formData.get("exp");
            const coin = formData.get("coin");

            const itemDrops = new Set();

            const resultItems = document.querySelectorAll(".result-item");

            resultItems.forEach(resultItem => {
                const itemId = resultItem.querySelector(".item");
                const rate = resultItem.querySelector(".rate");
                const count = resultItem.querySelector(".count");

                if (itemId && rate && count) {
                    itemDrops.add({
                        itemId: itemId.value,
                        rate: rate.value,
                        count: count.value,
                    });
                }
            });

            const payload = {
                exp,
                coin,
                itemDrops: Array.from(itemDrops)
            };

            const response = await fetch("./reward/create", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(payload)
            });

            const result = await response.json();
            alert(JSON.stringify(result, null, 2));
        });
    </script>

    <script src="../bs-5/js/bootstrap.min.js"></script>
</body>

</html>