<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Create Fuse</title>

    <link href="../bs-5/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <h1 class="mb-4">Create Fuse</h1>

        <form id="item-form">
            <h4>Main</h4>
            <div class="alert alert-secondary">
                <label for="item1">Item 1</label>
                <input type="number" id="item1" name="item1" class="form-control" placeholder="100000" required />
                <br>
                <label for="item2">Item 2</label>
                <input type="number" id="item2" name="item2" class="form-control" placeholder="100000" required />
                <br>
            </div>

            <h4>Random Fuse Result</h4>
            <div class="alert alert-primary" id="results">
                <div class="p-0 m-0 result-item">
                    <label for="item">Item Result Id</label>
                    <input type="number" class="form-control item" placeholder="100000" required />
                    <br>
                    <label for="rate">Item Result Rate</label>
                    <input type="number" class="form-control rate" min="1" placeholder="1" required />
                    <button type="button" class="btn btn-danger mt-3 delete-result-btn">Delete</button>
                    <hr class="border border-primary border-2">
                </div>
            </div>

            <button type="button" class="btn btn-primary me-3" id="add-result-btn">Add Result Item</button>
            <button type="submit" class="btn btn-success">Create</button>
        </form>
    </div>
    
    <script>
        const form = document.getElementById("item-form");
        const addResultButton = document.querySelector("#add-result-btn");
        const resultItemParent = document.querySelector("#results");
        const resultItemModel = document.querySelector("#results .result-item").cloneNode(true);
        
        function addResultItem() {
            const newResultItem = resultItemModel.cloneNode(true);

            resultItemParent.appendChild(newResultItem);
            reloadResultItems();
        }

        addResultButton.onclick = addResultItem;

        function deleteResultItem(element) {
            const resultItems = document.querySelectorAll(".result-item");

            if (resultItems.length > 1) {
                element.remove();
                reloadResultItems();
            }
        }

        function reloadResultItems() {
            const resultItems = document.querySelectorAll(".result-item");

            if (resultItems.length > 1) {
                resultItems.forEach(resultItem => {
                    const deleteResultBtn = document.querySelector(".delete-result-btn");

                    if (deleteResultBtn) {
                        deleteResultBtn.classList.remove("d-none");
                        deleteResultBtn.onclick = () => deleteResultItem(resultItem);
                    }
                });
            } else {
                resultItems.forEach(resultItem => {
                    const deleteResultBtn = document.querySelector(".delete-result-btn");

                    if (deleteResultBtn) {
                        deleteResultBtn.classList.add("d-none");
                        deleteResultBtn.onclick = undefined;
                    }
                });
            }
        }

        reloadResultItems();

        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            const formData = new FormData(form);
            const item1 = formData.get("item1");
            const item2 = formData.get("item2");

            const results = new Set();

            const resultItems = document.querySelectorAll(".result-item");

            resultItems.forEach(resultItem => {
                const itemId = resultItem.querySelector(".item");
                const rate = resultItem.querySelector(".rate");

                if (itemId && rate) {
                    results.add({
                        itemId: itemId.value,
                        rate: rate.value,
                    });
                }
            });

            const payload = {
                item1,
                item2,
                results: Array.from(results)
            };

            const response = await fetch("./fuse/create", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(payload)
            });

            const result = await response.json();
            alert(JSON.stringify(result, null, 2));
        });
    </script>

    <script src="../bs-5/js/bootstrap.min.js"></script>
</body>

</html>